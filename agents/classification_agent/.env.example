# LLM Configuration
OLLAMA_MODEL=llama3.2

# Sentiment Analysis Configuration
ENABLE_SENTIMENT=true
SENTIMENT_MODEL=yangheng/deberta-v3-base-absa-v1.1
SENTIMENT_CONFIDENCE_THRESHOLD=0.8
SENTIMENT_BOOST_THRESHOLD=-0.85

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Optional: Dry run mode (set to "1" to preview without writing to Notion)
NOTION_DRY_RUN=0

# Database Configuration - Choose ONE option:

# Option 1: Cloud Database (Supabase/Railway/Neon) - RECOMMENDED for team collaboration
# Get this from your Supabase project: Settings → Database → Connection String (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Option 2: Local PostgreSQL (docker-compose) - For local development only
# Comment out DATABASE_URL above and use these individual settings:
# DB_HOST=localhost
# DB_NAME=reviews
# DB_USER=reviewuser
# DB_PASSWORD=reviewpass123
# DB_PORT=5432

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude Configuration (for agentic workflows)
ANTHROPIC_API_KEY=api key here
AGENT_MODEL=claude-3-5-sonnet-20241022
AGENT_TEMPERATURE=0
AGENT_CHECKPOINT_DB=classification_agent.db
AGENT_VERBOSE=true
AGENT_MAX_ITERATIONS=10
